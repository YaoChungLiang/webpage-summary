{
  "manifest_version": 3,
  "name": "Webpage Summary Generator",
  "version": "1.0",
  "description": "Generate summaries of webpage content with a single click",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Generate Summary"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
